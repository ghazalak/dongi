<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
        android:id="@+id/tableLayout">
    <TableRow android:layout_width="match_parent"
              android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
            <TextView
                    android:textSize="20sp"
                    android:id="@+id/foodName"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:editable="true"
                    />
            <TextView
                    android:textSize="20dp"
                    android:id="@+id/foodQty"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/foodName"
                    android:layout_marginLeft="30dp"
                    />
            <TextView
                    android:textSize="20dp"
                    android:id="@+id/foodPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_below="@id/foodName"
                    android:layout_toRightOf="@id/foodQty"
                    android:layout_marginLeft="30dp"
                    />
            <Button android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/addContact"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/people"
                    android:onClick="btnSelectContact"
                    />
            <Button android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:id="@+id/editFoodRow"
                    android:layout_toLeftOf="@id/addContact"
                    android:text="edit"
                    android:onClick="editButtonClickHandler"
                    />

        </RelativeLayout>
    </TableRow>
</TableLayout>