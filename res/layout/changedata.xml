<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="#ff857d8b"
            >

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="chi khordim?"
                  android:id="@+id/textNameAddEditFood"
                  android:textColor="#ffffff"
                  android:textSize="30sp"
                  android:layout_marginTop="30dp"
                />
        <EditText android:layout_width="180dp"
                  android:layout_height="40dp"
                  android:hint="chi khordim?"
                  android:id="@+id/NameAddEditFood"

                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="chanta khordim?"
                  android:id="@+id/textQtyAddEditFood"
                  android:textColor="#ffffff"
                  android:textSize="30sp"
                />
        <EditText android:layout_width="180dp"
                  android:layout_height="40dp"
                  android:hint="chanta khordim?"
                  android:id="@+id/qtyAddEditFood"
                  android:numeric="integer"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="chand khordim?"
                  android:id="@+id/textPriceAddEditFood"
                  android:textColor="#ffffff"
                  android:textSize="30sp"
                />
        <EditText android:layout_width="180dp"
                  android:layout_height="40dp"
                  android:hint="chand shod?"
                  android:id="@+id/priceAddEditFood"
                  android:numeric="integer"
                />
        <Button android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="taeed"
                android:id="@+id/btnTaeedAddEditFood"
                android:layout_marginTop="30dp"
                android:background="#ff8b626c"
                android:textColor="#ff8b000a"
                android:onClick="btnBackClickHandler"
                />
        <Button android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="bazgasht"
                android:id="@+id/btnBackAddEditFood"
                android:layout_marginTop="30dp"
                android:background="#ff8b626c"
                android:textColor="#ff8b000a"
                android:onClick="btnBackToFoodList"
                />
    </LinearLayout>